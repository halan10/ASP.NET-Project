@model List<Car>;

<h1>All ads of this category</h1>
<hr />
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Model</th>
            <th scope="col">Year</th>
            <th scope="col">Price</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @foreach (var p in Model)
        {
            <tr class="align-middle">
                <th scope="row">@p.Id</th>
                <th>@p.Name</th>
                <th>@p.Model</th>
                <th>@p.Year</th>
                <th>@p.Price $</th>
                <th>
                    <a asp-action="Delete" asp-route-id="@p.Id"  class="btn btn-secondary">Delete</a>
                    <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-secondary">Details <img src="https://cdn-icons-png.flaticon.com/512/56/56854.png?w=740&t=st=1679781597~exp=1679782197~hmac=cb9794c872e7aa594db20ccf41162e19441197ac710ec2db6d286088327301af" width="15" height="15" /> </a>
                </th>
            </tr>
        }
    </tbody>
</table>

<p>Count: @Model.Count</p>
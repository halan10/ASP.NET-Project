@model Car;

<div class="card w-75 mb-3" style="width: 35rem;">
    <img src="@Model.Image" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.Name @Model.Model</h5>
        <p class="card-text">@Model.Description</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Year: @Model.Year</li>
        <li class="list-group-item">City: @Model.City</li>
        <li class="list-group-item">Price: @Model.Price $</li>
    </ul>
    <div class="card-body">
        <a href="mailto:@Model.Email" class="card-link">@Model.Email</a>
        <a href="tel:@Model.PhoneNumber" class="card-link">@Model.PhoneNumber</a>
    </div>
    <a asp-action="Back" class="btn btn-secondary">Back</a>
</div>